    "version": "0.2.0",
    "configurations": [
        {
            "name": "Play in Editor",
            "type": "godot-mono",
            "mode": "playInEditor",
            "request": "launch"
        },
        {
            "name": "Launch Server",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executable": "${env:GODOT}/Godot_v3.4.2-stable_mono_win64.exe\r",
            "executableArguments": [
                "--no-window",
                "--path",
                "${workspaceRoot}",
                "scenes/Game.tscn",
                "--server",
                "50125",
                "--world",
                "starting_zone"
            ]
        },
        {
            "name": "Launch",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executable": "${env:GODOT}/Godot_v3.4.2-stable_mono_win64.exe\r",
            "executableArguments": [
                "--path",
                "${workspaceRoot}",
                "scenes/Game.tscn",
                "--world",
                "starting_zone"
            ]
        },
        {
            "name": "Attach",
            "type": "godot-mono",
            "request": "attach",
            "address": "localhost",
            "port": 23685
        }
    ]
}